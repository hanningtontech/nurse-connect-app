<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Storage permissions for file uploads -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    
    <!-- Camera permission for taking photos -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Audio permissions for voice calls -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- WebRTC specific permissions -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- Location permission for nearby features -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Notification permissions -->
    <!-- POST_NOTIFICATIONS permission already declared above -->
    
    <!-- Camera feature -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".NurseConnectApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nurse_Connect"
        android:usesCleartextTraffic="false"
        android:networkSecurityConfig="@xml/network_security_config"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="31">
        
        <!-- Splash Activity - Entry point -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Onboarding Activity -->
        <activity
            android:name=".ui.onboarding.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Landing Activity -->
        <activity
            android:name=".ui.LandingActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Authentication Activities -->
        <activity
            android:name=".ui.auth.AuthCheckActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <activity
            android:name=".ui.auth.SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <activity
            android:name=".ui.auth.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />
        
        <!-- Profile Completion Activity -->
        <activity
            android:name=".ui.auth.ProfileCompletionActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Comments Activity -->
        <activity
            android:name=".ui.comments.CommentsActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />
        
        <!-- User Profile Activity -->
        <activity
            android:name=".ui.profile.UserProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />

        <!-- Full Screen Image Activity -->
        <activity
            android:name=".ui.profile.FullScreenImageActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- Edit Profile Activity -->
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />

        <!-- Followers Activity -->
        <activity
            android:name=".ui.profile.FollowersActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />

        <!-- Following Activity -->
        <activity
            android:name=".ui.profile.FollowingActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />
            
        <!-- Favorites Activity -->
        <activity
            android:name=".ui.favorites.FavoritesActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />

        <!-- PDF Viewer Activity -->
        <activity
            android:name=".ui.pdf.PdfViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />

        <!-- Custom PDF Viewer Activity -->
        <activity
            android:name=".ui.pdf.CustomPdfViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />

        <!-- PDF Download Service -->
        <service
            android:name=".services.PdfDownloadService"
            android:exported="false" />
            
        <!-- Rating Activity -->
        <activity
            android:name=".ui.rating.RatingActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />
        

        
        <!-- Downloads Activity -->
        <activity
            android:name=".ui.downloads.DownloadsActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />
        
        <!-- User Materials Activity -->
        <activity
            android:name=".ui.profile.UserMaterialsActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />
        
        <!-- Downloaded Materials Activity -->
        <activity
            android:name=".ui.downloads.DownloadedMaterialsActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />
        
        <!-- Chat Activity -->
        <activity
            android:name=".ui.chat.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Nurse_Connect" />
        
        <!-- Private Chat Activity -->
        <activity
            android:name=".ui.chat.PrivateChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- Audio Call Activity -->
        <activity
            android:name=".ui.chat.AudioCallActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Video Call Activity -->
        <activity
            android:name=".ui.chat.VideoCallActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Call History Activity -->
        <activity
            android:name=".ui.calls.CallHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect" />
        
        <!-- Private Chat List Activity -->
        <activity
            android:name=".ui.chat.PrivateChatListActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- Direct Messages Activity -->
        <activity
            android:name=".ui.chat.DirectMessagesActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- New Conversation Activity -->
        <activity
            android:name=".ui.chat.NewConversationActivity"
            android:exported="false"
            android:parentActivityName=".ui.chat.DirectMessagesActivity"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- Create Group Activity -->
        <activity
            android:name=".ui.chat.CreateGroupActivity"
            android:exported="false"
            android:parentActivityName=".ui.chat.StudyGroupsFragment"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- Invite Members Activity -->
        <activity
            android:name=".ui.chat.InviteMembersActivity"
            android:exported="false"
            android:parentActivityName=".ui.chat.CreateGroupActivity"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- Group Chat Activity -->
        <activity
            android:name=".ui.chat.GroupChatActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- Group Info Activity -->
        <activity
            android:name=".ui.chat.GroupInfoActivity"
            android:exported="false"
            android:parentActivityName=".ui.chat.GroupChatActivity"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- Public Groups Activity -->
        <activity
            android:name=".ui.community.PublicGroupsActivity"
            android:exported="false"
            android:parentActivityName=".ui.community.CommunityHubActivity"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- My Groups Activity -->
        <activity
            android:name=".ui.community.MyGroupsActivity"
            android:exported="false"
            android:parentActivityName=".ui.community.CommunityHubActivity"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- Community Hub Activity -->
        <activity
            android:name=".ui.community.CommunityHubActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />

        <!-- Universal Search Activity -->
        <activity
            android:name=".ui.search.UniversalSearchActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Global Nurse Hub Activity -->
        <activity
            android:name=".ui.community.GlobalNurseHubActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Connect Activity -->
        <activity
            android:name=".ui.community.ConnectActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Community Profile Activity -->
        <activity
            android:name=".ui.community.CommunityProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Community Profile View Activity -->
        <activity
            android:name=".ui.community.CommunityProfileViewActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Quiz Match Activities -->
        <activity
            android:name=".ui.quiz.QuizSetupActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.quiz.QuizMatchmakingActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <activity
            android:name=".ui.quiz.QuizWaitingRoomActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <activity
            android:name=".ui.quiz.QuizMatchActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <!-- Flashcard Activities -->
        <activity
            android:name=".ui.flashcards.FlashcardSetupActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardGameModeSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardStudyModeActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardTimedModeActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardQuizModeActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardSpacedRepetitionActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardMasteryModeActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.StudyProgressActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardResultsActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardSessionDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            
        <activity
            android:name=".ui.flashcards.FlashcardProgressActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
            

            
        <!-- Image Crop Activity -->
        <activity
            android:name=".ui.community.ImageCropActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- Create Post Activity -->
        <activity
            android:name=".ui.community.CreatePostActivity"
            android:exported="false"
            android:theme="@style/Theme.Nurse_Connect.NoActionBar" />
        
        <!-- UCrop Activity for image cropping -->
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        
        <!-- File Provider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- Message Listener Service for real-time messaging -->
        <service
            android:name=".services.MessageListenerService"
            android:enabled="true"
            android:exported="false" />

        <!-- Call Notification Service for incoming calls -->
        <service
            android:name=".services.CallNotificationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="phoneCall" />

        <!-- Call Action Receiver for handling call actions -->
        <receiver
            android:name=".services.CallActionReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- Google Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>