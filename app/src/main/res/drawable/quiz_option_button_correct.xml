<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/medical_success_light" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="3dp" 
                android:color="@color/medical_success" />
            <padding 
                android:left="20dp" 
                android:right="20dp" 
                android:top="16dp" 
                android:bottom="16dp" />
        </shape>
    </item>
    
    <!-- Checkmark icon on the right -->
    <item android:gravity="end|center_vertical" android:right="16dp">
        <vector
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="@color/medical_success"
                android:pathData="M9,16.17L4.83,12l-1.42,1.41L9,19 21,7l-1.41,-1.41z"/>
        </vector>
    </item>
    
</layer-list>
