<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/medical_surface">
    
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="@color/medical_accent"
                android:startColor="@color/medical_primary" />
            <corners android:radius="25dp" />
            <padding 
                android:left="32dp" 
                android:right="32dp" 
                android:top="16dp" 
                android:bottom="16dp" />
        </shape>
    </item>
    
</ripple>
