<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/medical_primary_light">
    
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/medical_surface" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="2dp" 
                android:color="@color/medical_primary" />
            <padding 
                android:left="20dp" 
                android:right="20dp" 
                android:top="16dp" 
                android:bottom="16dp" />
        </shape>
    </item>
    
</ripple>
