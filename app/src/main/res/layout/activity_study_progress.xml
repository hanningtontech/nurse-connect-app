<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Study Progress"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- Progress Icon -->
                <ImageView
                    android:id="@+id/ivProgressIcon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_success"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/circle_background_blue"
                    android:padding="24dp"
                    app:tint="@color/white" />

                <!-- Challenge Status -->
                <TextView
                    android:id="@+id/tv_challenge_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to start your 30-day challenge!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Streak Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Streak Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ Your Study Streak"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp" />

                    <!-- Current Streak -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_current_streak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tv_current_streak_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Days"
                                android:textSize="14sp"
                                android:textColor="@color/gray" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_max_streak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorSecondary" />

                            <TextView
                                android:id="@+id/tv_max_streak_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Days"
                                android:textSize="14sp"
                                android:textColor="@color/gray" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Streak Progress Bar -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress to 30-day streak:"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/progress_bar_streak"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="@color/gray"
                        android:progressBackgroundTint="@color/theme_surface" />

                    <!-- Streak Status Message -->
                    <TextView
                        android:id="@+id/tv_streak_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start your streak today!"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginTop="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Progress Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“š Study Progress"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp" />

                    <!-- Main Progress Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Questions Progress:"
                                android:textSize="16sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_progress_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0%"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_bar_main"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:progress="0"
                            android:max="400"
                            android:progressTint="@color/flame_orange"
                            android:progressBackgroundTint="@color/theme_surface" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/tv_completed_sets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" / "
                                android:textSize="18sp"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/tv_target_sets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="400"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorSecondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" questions completed"
                                android:textSize="18sp"
                                android:textColor="@color/gray" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Days Progress Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="30-Day Challenge:"
                                android:textSize="16sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Days Remaining"
                                android:textSize="14sp"
                                android:textColor="@color/gray" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_bar_days"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:progress="0"
                            android:max="100"
                            android:progressTint="@color/gray"
                            android:progressBackgroundTint="@color/theme_surface" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Day "
                                android:textSize="16sp"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/tv_days_since_first"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" of 30 ("
                                android:textSize="16sp"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/tv_days_remaining"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorSecondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" remaining)"
                                android:textSize="16sp"
                                android:textColor="@color/gray" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Progress Status Message -->
                    <TextView
                        android:id="@+id/tv_progress_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start your 30-day challenge!"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Statistics Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Statistics Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Study Statistics"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp" />

                    <!-- Statistics Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Sessions"
                                android:textSize="14sp"
                                android:textColor="@color/gray"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_total_sessions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Questions per Set"
                                android:textSize="14sp"
                                android:textColor="@color/gray"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorSecondary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Refresh Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ”„ Refresh Progress"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="12dp" />

                <!-- Reset Progress Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reset"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ”„ Reset Progress"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/theme_warning"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
