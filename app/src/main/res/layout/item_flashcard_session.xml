<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Performance Indicator -->
            <View
                android:id="@+id/performance_indicator"
                android:layout_width="8dp"
                android:layout_height="40dp"
                android:background="@drawable/performance_excellent"
                android:layout_marginEnd="12dp" />

            <!-- Heading -->
            <TextView
                android:id="@+id/text_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nursing - Basic Skills - Unit 1 (Dec 15) - Excellent"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Score and Accuracy Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Score -->
            <TextView
                android:id="@+id/text_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="17/20"
                android:textColor="#666666"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_score"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <!-- Accuracy -->
            <TextView
                android:id="@+id/text_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85.0%"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Bottom Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Date and Time -->
            <TextView
                android:id="@+id/text_date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dec 15, 2024 at 14:30"
                android:textColor="#999999"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="6dp"
                android:gravity="center_vertical" />

            <!-- Performance Level -->
            <TextView
                android:id="@+id/text_performance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excellent"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/performance_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
