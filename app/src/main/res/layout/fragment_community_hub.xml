<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".ui.community.CommunityHubFragment">

    <!-- Top Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F9FA"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:contentInsetStartWithNavigation="0dp"
            app:contentInsetEndWithActions="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Community Hub"
                    android:textColor="#212529"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_search"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#495057" />

                <ImageView
                    android:id="@+id/btnNotifications"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notifications"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#495057" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Connect with Other Nurses Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E7F0FE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connect with Other Nurses"
                            android:textColor="#212529"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-medium" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConnect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Connect"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            app:cornerRadius="20dp"
                            app:backgroundTint="#007BFF"
                            style="@style/Widget.MaterialComponents.Button" />

                    </LinearLayout>

                    <!-- AVATAR SLOT -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Featured Nurse Avatar -->
                        <ImageView
                            android:id="@+id/ivFeaturedNurse"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:padding="4dp" />



                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Grid of Community Options -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Global Nurse Hub -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardGlobalHub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E9ECEF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/globalnursehub_avatar"
                            android:layout_width="80dp"
                            android:layout_height="100dp"

                            android:layout_marginBottom="8dp"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Global Nurse Hub"
                            android:textColor="#212529"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Public Groups -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPublicGroups"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E9ECEF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/publicgroubs_avatar"
                            android:layout_width="80dp"
                            android:layout_height="100dp"

                            android:layout_marginBottom="8dp"
                         />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Public Groups"
                            android:textColor="#212529"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- My Groups -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMyGroups"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E9ECEF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/mygroubs_avatar"
                            android:layout_width="80dp"
                            android:layout_height="100dp"

                            android:layout_marginBottom="8dp"
                          />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Groups"
                            android:textColor="#212529"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Public Tasks -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPublicTasks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E9ECEF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/publictask_avatar"
                            android:layout_width="80dp"
                            android:layout_height="100dp"

                            android:layout_marginBottom="8dp"
                       />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Public Tasks"
                            android:textColor="#212529"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

