<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Study Results"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Result Icon -->
                <ImageView
                    android:id="@+id/ivResultIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_success"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circle_background_green"
                    android:padding="12dp"
                    app:tint="@color/white" />

                <!-- Result Message -->
                <TextView
                    android:id="@+id/text_result_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰ Congratulations! You've passed!"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <!-- Encouragement Text -->
                <TextView
                    android:id="@+id/text_encouragement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Excellent work! Keep up the great studying!"
                    android:textSize="8sp"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

            <!-- Score Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Accuracy Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Accuracy"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/text_accuracy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85.0%"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginBottom="16dp" />

                        <ProgressBar
                            android:id="@+id/progress_bar_accuracy"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:progress="85"
                            android:max="100"
                            android:progressTint="@color/colorPrimary"
                            android:progressBackgroundTint="@color/theme_surface" />

                    </LinearLayout>

                    <!-- Score Details -->
                    <TextView
                        android:id="@+id/text_score_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You answered 17 out of 20 questions correctly"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Success Layout (shown when passed) -->
            <LinearLayout
                android:id="@+id/layout_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:visibility="visible">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/success_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ¯ Performance Highlights"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/success_text"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Strong understanding of core concepts\nâ€¢ Good time management\nâ€¢ Consistent performance across topics"
                            android:textSize="7sp"
                            android:textColor="@color/success_text" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Failure Layout (shown when failed) -->
            <LinearLayout
                android:id="@+id/layout_failure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/error_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“š Areas for Improvement"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/error_text"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Review fundamental concepts\nâ€¢ Practice more questions\nâ€¢ Focus on weak areas"
                            android:textSize="7sp"
                            android:textColor="@color/error_text" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <!-- Save Session Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save_session"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:text="Save Study Session"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"
                    app:cornerRadius="6dp" />

                <!-- View History Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_history"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:text="View Study History"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp"
                    app:cornerRadius="6dp"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <!-- Try Again Button (shown only when failed) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_try_again"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:text="Try Again"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/colorSecondary"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    app:cornerRadius="6dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
