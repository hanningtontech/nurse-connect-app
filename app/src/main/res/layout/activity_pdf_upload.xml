<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_light">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📚 PDF Question Extractor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload a Fundamentals of Nursing PDF and extract questions for quiz battles"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Step 1: Select PDF -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 1: Select PDF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSelectPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📁 Select New PDF File"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white" />

    <!-- Or select from existing PDFs -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or select from existing PDFs:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btnListPdfs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📋 List Existing PDFs"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_secondary"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btnRefreshPdfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔄"
            android:textSize="18sp"
            android:padding="16dp"
            android:background="@drawable/button_secondary"
            android:textColor="@color/text_primary" />

    </LinearLayout>

    <!-- Step 2: Upload PDF -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 2: Upload to Firebase Storage"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnUploadPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="☁️ Upload PDF"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_secondary"
        android:textColor="@color/text_primary" />

    <!-- Step 3: Extract Questions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 3: Extract &amp; Upload Questions"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnExtractQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔍 Extract Questions"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white" />

    <!-- Alternative: Generate Sample Questions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or generate sample questions for testing:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnGenerateSample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🎯 Generate Sample Questions"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_secondary"
        android:textColor="@color/text_primary" />

    <!-- Structured Quiz Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or select structured quiz category:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnStructuredQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📚 Select Quiz Category (Career → Course → Unit)"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white" />

    <!-- Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progress"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to start"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a PDF file to begin"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:background="@drawable/status_background"
            android:padding="16dp" />

    </LinearLayout>

    <!-- Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ℹ️ How it works:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 1 - New PDF:\n1. Select a new PDF file\n2. Upload to Firebase Storage\n3. Extract questions\n\nOption 2 - Existing PDF:\n1. List existing PDFs\n2. Select from uploaded PDFs\n3. Extract questions\n\nOption 3 - Structured Quiz:\n1. Select Career → Course → Unit\n2. Upload PDF or use existing\n3. Extract questions\n\n4. Questions will be available for quiz battles"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</LinearLayout>
