<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="200dp"
    android:layout_marginHorizontal="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/theme_border"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/theme_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/ivContentImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/theme_surface_variant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/ic_book" />

        <!-- Gradient Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/gradient_overlay"
            app:layout_constraintTop_toTopOf="@id/ivContentImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Content Type Badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipContentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Study Material"
            android:textSize="10sp"
            android:textColor="@color/theme_text_on_primary"
            app:chipBackgroundColor="?attr/colorPrimary"
            app:chipCornerRadius="12dp"
            app:chipMinHeight="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Study Material" />

        <!-- Course Relevance Indicator -->
        <ImageView
            android:id="@+id/ivCourseRelevant"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_star"
            android:tint="@color/theme_accent"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

        <!-- Content Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/theme_surface"
            app:layout_constraintTop_toBottomOf="@id/ivContentImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advanced Nursing Fundamentals"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/theme_text_on_surface"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Advanced Nursing Fundamentals" />

            <!-- Author Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivAuthorPhoto"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_person"
                    tools:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/tvAuthorName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Dr. Sarah Johnson"
                    android:textSize="11sp"
                    android:textColor="@color/theme_text_secondary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Dr. Sarah Johnson" />

            </LinearLayout>

            <!-- Engagement Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <!-- Likes -->
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_favorite"
                    android:tint="@color/theme_secondary"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/tvLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textSize="10sp"
                    android:textColor="@color/theme_text_secondary"
                    android:layout_marginEnd="12dp"
                    tools:text="24" />

                <!-- Views -->
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_visibility"
                    android:tint="@color/theme_text_secondary"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/tvViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="156"
                    android:textSize="10sp"
                    android:textColor="@color/theme_text_secondary"
                    android:layout_marginEnd="12dp"
                    tools:text="156" />

                <!-- Comments -->
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_comment"
                    android:tint="@color/theme_text_secondary"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/tvComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="10sp"
                    android:textColor="@color/theme_text_secondary"
                    tools:text="8" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
