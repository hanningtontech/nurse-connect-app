<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="320dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/theme_surface"
    android:elevation="8dp"
    android:padding="16dp"
    android:layout_margin="8dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notifications"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/theme_text_on_surface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarkAllRead"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Mark all read"
            android:textSize="10sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/theme_primary"
            android:minWidth="80dp" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            android:tint="@color/theme_text_secondary" />

    </LinearLayout>

    <!-- Notification Types Filter -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:singleSelection="false"
        app:chipSpacingHorizontal="4dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipUnread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unread"
            android:checked="true"
            style="@style/Widget.MaterialComponents.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            style="@style/Widget.MaterialComponents.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            style="@style/Widget.MaterialComponents.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFollows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follows"
            style="@style/Widget.MaterialComponents.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks"
            style="@style/Widget.MaterialComponents.Chip.Filter" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Notifications List Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="450dp"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

    </androidx.core.widget.NestedScrollView>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_notifications"
            android:tint="@color/theme_text_secondary"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No notifications yet"
            android:textSize="14sp"
            android:textColor="@color/theme_text_secondary"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>
