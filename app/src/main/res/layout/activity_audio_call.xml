<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_background_gradient">

    <!-- Status Bar Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@android:color/transparent" />

    <!-- Top Section - User Info -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- User Profile Picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfileImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_profile_placeholder"
            android:layout_marginBottom="24dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@android:color/white" />

        <!-- User Name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Call Status -->
        <TextView
            android:id="@+id/callStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calling..."
            android:textColor="#E0E0E0"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Call Duration -->
        <TextView
            android:id="@+id/callDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Bottom Section - Call Controls -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="40dp">

        <!-- Mute Button -->
        <LinearLayout
            android:id="@+id/muteButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/call_button_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/muteIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_mic_on"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- End Call Button -->
        <LinearLayout
            android:id="@+id/endCallButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/end_call_button_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_call_end"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Speaker Button -->
        <LinearLayout
            android:id="@+id/speakerButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/call_button_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/speakerIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_speaker_off"
                app:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Incoming Call Section (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/incomingCallSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="60dp"
        android:visibility="gone">

        <!-- Decline Button -->
        <LinearLayout
            android:id="@+id/declineButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/decline_call_button_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_call_end"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Accept Button -->
        <LinearLayout
            android:id="@+id/acceptButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/accept_call_button_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_phone"
                app:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
