<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/theme_background">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Learning Style"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/theme_text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a game mode that matches your learning preferences, then choose difficulty and settings."
            android:textSize="16sp"
            android:textColor="@color/theme_text_secondary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Settings Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <!-- Difficulty Spinner -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty"
                    android:textSize="14sp"
                    android:textColor="@color/theme_text_secondary"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/difficulty_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@color/theme_surface" />
            </LinearLayout>

            <!-- Time Limit Spinner -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Limit"
                    android:textSize="14sp"
                    android:textColor="@color/theme_text_secondary"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/time_limit_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@color/theme_surface" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Game Modes Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/game_mode_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

</LinearLayout>
