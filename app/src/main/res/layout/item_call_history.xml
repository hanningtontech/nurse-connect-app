<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/theme_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- User Photo -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userPhoto"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_profile_placeholder"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/theme_primary" />

        <!-- Call Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- User Name and Call Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User Name"
                    android:textColor="@color/theme_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/callTypeIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_call"
                    android:layout_marginStart="8dp"
                    app:tint="@color/theme_primary" />

            </LinearLayout>

            <!-- Call Type and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/callType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Audio Call"
                    android:textColor="@color/theme_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/callStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:30"
                    android:textColor="@color/theme_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Call Time and Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/callTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dec 15, 2023 at 2:30 PM"
                    android:textColor="@color/theme_text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/callDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:30"
                    android:textColor="@color/theme_text_secondary"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Call Direction Icon -->
        <ImageView
            android:id="@+id/callDirectionIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_call_made"
            android:layout_marginStart="12dp"
            app:tint="@color/theme_primary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
