<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ========================================= -->
    <!-- BASE APPLICATION THEME                   -->
    <!-- ========================================= -->
    <style name="Base.Theme.Nurse_Connect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material Components Color System -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_variant</item>
        <item name="colorSecondary">@color/theme_secondary</item>
        <item name="colorSecondaryVariant">@color/theme_accent</item>
        <item name="colorSurface">@color/theme_surface</item>
        <item name="colorSurfaceVariant">@color/theme_surface_variant</item>
        <item name="colorError">@color/theme_error</item>

        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/theme_text_on_primary</item>
        <item name="colorOnSecondary">@color/theme_text_on_primary</item>
        <item name="colorOnSurface">@color/theme_text_on_surface</item>
        <item name="colorOnSurfaceVariant">@color/theme_text_secondary</item>
        <item name="colorOnError">@color/white</item>

        <!-- Legacy AppCompat Colors -->
        <item name="colorPrimaryDark">@color/theme_primary_variant</item>
        <item name="colorAccent">@color/theme_secondary</item>

        <!-- Background Colors -->
        <item name="android:windowBackground">@color/theme_background</item>

        <!-- Status Bar and Navigation Bar -->
        <item name="android:statusBarColor">@color/theme_primary</item>
        <item name="android:navigationBarColor">@color/theme_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Theme.Nurse_Connect" parent="Base.Theme.Nurse_Connect" />

    <!-- ========================================= -->
    <!-- SPECIALIZED THEMES                       -->
    <!-- ========================================= -->

    <!-- No Action Bar theme for full-screen activities -->
    <style name="Theme.Nurse_Connect.NoActionBar" parent="Base.Theme.Nurse_Connect">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- ========================================= -->
    <!-- COMPONENT STYLES                         -->
    <!-- ========================================= -->

    <!-- Button Styles -->
    <style name="Theme.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/theme_primary</item>
        <item name="android:textColor">@color/theme_text_on_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Theme.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/theme_primary</item>
        <item name="android:textColor">@color/theme_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Theme.Button.Action" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/theme_action</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Card Styles -->
    <style name="Theme.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/theme_surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/theme_border</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Text Input Styles -->
    <style name="Theme.TextInputLayout" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/theme_text_primary</item>
        <item name="android:textColorHint">@color/theme_text_secondary</item>
        <item name="android:background">@color/theme_surface</item>
    </style>

    <!-- Circle Image View Style (for CircleImageView library) -->
    <style name="CircleImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- ========================================= -->
    <!-- CHAT SPECIFIC STYLES                     -->
    <!-- ========================================= -->

    <!-- Chat Input Style -->
    <style name="Theme.ChatInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/theme_chat_input_background</item>
        <item name="android:textColor">@color/theme_text_primary</item>
        <item name="android:textColorHint">@color/theme_text_secondary</item>
    </style>
</resources>